<Window x:Class="MyTaskManagerWPF.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyTaskManagerWPF.View"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" Margin="10">
            <Button x:Name="btnAddTask" Command="{Binding ShowAddWindowCommand}" Content="Добавить задачу" Margin="0,5"/>
            <Button x:Name="btnEditTask" Command="{Binding ShowEditWindowCommand}" CommandParameter="{Binding SelectedTask}" Content="Редактировать задачу" Margin="0,5"/>
            <Button x:Name="btnDeleteTask" Content="Удалить задачу" Margin="0,5"/>
            <Button x:Name="btnSave" Content="Сохранить" Command="{Binding ShowSaveWindowCommand}"/>
            <Button x:Name="btnLoad" Content="Загрузить" Margin="0,5"/>
            
            <ComboBox x:Name="cbLanguage" SelectionChanged="cbLanguage_DropDownClosed">
                <ComboBoxItem Content="Русский" Tag="ru-RU" IsSelected="True"/>
                <ComboBoxItem Content="English" Tag="en-US"/>
            </ComboBox>
        </StackPanel>
        <TabControl Grid.Column="1">
            <TabItem Grid.Column="1">
                <TabItem.Header>
                    <TextBlock Text="ActiveTasks"></TextBlock>
                </TabItem.Header>
                <ListView x:Name="lvTasks" Margin="10" ItemsSource="{Binding ActiveTasks}">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Название" Width="auto" DisplayMemberBinding="{Binding Name}"/>
                            <GridViewColumn Header="Текст" Width="auto" DisplayMemberBinding="{Binding Description}"/>
                            <GridViewColumn Header="Дата Создание" Width="auto" DisplayMemberBinding="{Binding Created}"/>
                            <GridViewColumn Header="Приоритет" Width="auto" DisplayMemberBinding="{Binding TaskPriority}"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </TabItem>
            <TabItem Grid.Column="1">
                <TabItem.Header>
                    <TextBlock Text="ArchiveTasks"></TextBlock>
                </TabItem.Header>
                <ListView x:Name="lvArchiveTasks" Margin="10" ItemsSource="{Binding ArchiveTasks}" SelectedItem="{Binding SelectedTask, Mode=TwoWay}">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Название" Width="auto" DisplayMemberBinding="{Binding Name}"/>
                            <GridViewColumn Header="Текст" Width="auto" DisplayMemberBinding="{Binding Description}"/>
                            <GridViewColumn Header="Дата Создание" Width="auto" DisplayMemberBinding="{Binding Created}"/>
                            <GridViewColumn Header="Приоритет" Width="auto" DisplayMemberBinding="{Binding TaskPriority}"/>
                            <GridViewColumn Header="Выполнена" Width="auto" DisplayMemberBinding="{Binding Completed}"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
