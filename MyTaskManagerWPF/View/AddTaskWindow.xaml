<Window x:Class="MyTaskManagerWPF.View.AddTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyTaskManagerWPF.View"
        mc:Ignorable="d"
        Title="AddTaskWindow" Height="400" Width="300">
    <Grid Height="384" VerticalAlignment="Bottom">
        <!-- Separate this to different place -->
        <StackPanel>
            <Label x:Name="lblTaskName">Название задачи</Label>
            <TextBox x:Name="tbName" Text="{Binding Name}"></TextBox>
            <Label x:Name="lblTaskText">Текст задачи</Label>
            <TextBox x:Name="tbDescription" Text="{Binding Description}" Height="150"></TextBox>
            <Label x:Name="lblTaskPriority">Приортитет задачи</Label>
            <ComboBox x:Name="cbPriority" Text="{Binding TaskPriority}">
                <ComboBoxItem Content="Низкая"></ComboBoxItem>
                <ComboBoxItem Content="Средняя" IsSelected="True"></ComboBoxItem>
                <ComboBoxItem Content="Высокая"></ComboBoxItem>
                <ComboBoxItem Content="Срочная"></ComboBoxItem>
            </ComboBox>
        </StackPanel>
        <Button Content="Add" Command="{Binding AddTaskCommand}" Margin="0,357,0,0"/>
    </Grid>
</Window>
