<Window x:Class="MyTaskManagerWPF.EditTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyTaskManagerWPF"
        mc:Ignorable="d"
        Title="EditTaskWindow" Height="250" Width="400">
    <Grid>
        <StackPanel Grid.Column="0" Margin="10">
            <Label x:Name="lblTaskName">Название задачи</Label>
            <TextBox x:Name="tbName"></TextBox>
            <Label x:Name="lblTaskText">Текст задачи</Label>
            <TextBox x:Name="tbDescription"></TextBox>
            <Label x:Name="lblTaskPriority">Приортитет задачи</Label>
            <ComboBox x:Name="cbPriority">
                <ComboBoxItem Content="Низкая"></ComboBoxItem>
                <ComboBoxItem Content="Средняя" IsSelected="True"></ComboBoxItem>
                <ComboBoxItem Content="Высокая"></ComboBoxItem>
                <ComboBoxItem Content="Срочная"></ComboBoxItem>
            </ComboBox>

            <Button x:Name="btnEditApply" Content="" Margin="0,5" Click="btnEditApply_Click"/>
            <Button x:Name="btnEditCancel" Content="" Margin="0,5" Click="btnEditCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
